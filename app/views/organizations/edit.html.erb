<h1>Organizations#edit</h1>

<h2>Edit <%= @organization.name %></h2>

<%= simple_form_for(@organization) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :variety, required: true %>

    <ul>
      <% @users.each do |user| %>
        <li><%= check_box_tag "organization[user_ids][]", user.id, @organization.users.include?(user) %>
        <%= user.full_name %></li>
      <% end %>
    </ul>

  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>